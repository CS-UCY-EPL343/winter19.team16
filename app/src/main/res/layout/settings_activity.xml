
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.team16.ecoffee.SignUp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up!"
                    android:textColor="#3e4a59"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Create a new account:"
                    android:textSize="18sp"
                    android:textColorHint="#3e4a59"
                    android:background="#00000000"
                    android:layout_marginTop="45dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#00000000"
                    android:hint="Username"
                    android:textColorHint="#24272b"
                    android:textSize="15sp" />

                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c28e79"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="#00000000"
                    android:hint="Password"
                    android:textColorHint="#4b5461"
                    android:textSize="15sp"
                    android:inputType="textPassword"/>


                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c28e79"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="#00000000"
                    android:hint="Confirm Password"
                    android:textColorHint="#4b5461"
                    android:textSize="15sp"
                    android:inputType="textPassword"/>
                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c28e79"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="#00000000"
                    android:hint="Email"
                    android:textColorHint="#4b5461"
                    android:textSize="15sp" />

                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c28e79"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="#00000000"
                    android:hint="Phone number"
                    android:textColorHint="#4b5461"
                    android:textSize="15sp" />

                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c28e79"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:background="@drawable/rect1"/>
            <TextView
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account?"
                android:textColor="#733e4a59"
                android:textSize="14sp"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="14sp"
                android:textColor="#b98068"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>





    </LinearLayout>
